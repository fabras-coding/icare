@model iCare.Presentation.MVC.Models.CuidadorViewModel


@using (Html.BeginForm("NovoCuidador", "Cuidador", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Novo Cuidador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.nomeCuidador, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeCuidador, new { htmlAttributes = new { @class = "form-control" , @placeholder= "Seu Nome"} })
                @Html.ValidationMessageFor(model => model.nomeCuidador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.enderecoCuidador, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.enderecoCuidador, new { htmlAttributes = new { @class = "form-control", @placeholder = "Endereço Completo" } })
                @Html.ValidationMessageFor(model => model.enderecoCuidador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.dddCuidador, htmlAttributes: new { @class = "control-label col-md-2" })*@
