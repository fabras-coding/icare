                @Html.TextAreaFor(model => model.descRestricoes, new {  @class = "form-control", rows= "3", placeholder = "Descreva suas restrições" })
                @Html.ValidationMessageFor(model => model.descRestricoes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

