                @Html.EditorFor(model => model.dddCuidador, new { htmlAttributes = new { @class = "form-control", @placeholder = "DDD" } })
                @Html.ValidationMessageFor(model => model.dddCuidador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.telefoneCuidador, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefoneCuidador, new { htmlAttributes = new { @class = "form-control", @placeholder = "Telefone" } })
                @Html.ValidationMessageFor(model => model.telefoneCuidador, "", new { @class = "text-danger" })
            </div>
        </div>

